<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/standardMargin6x"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="?colorPrimary"
                android:paddingTop="@dimen/standardMargin3x"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/backImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/standardMargin"
                    android:padding="14dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/gradient_back_fa"
                    />

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/search"
                    android:textSize="@dimen/standardMargin1.5x"
                    android:maxLines="1"
                    android:textColor="?android:textColor"
                    android:textColorHint="?colorAccent"
                    android:layout_marginHorizontal="@dimen/standardMargin1.5x"
                    android:focusable="true"
                    android:singleLine="true"
                    android:focusableInTouchMode="true"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/standardMargin"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mainRecyclerView"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/nothing_Linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/nothing_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standardMargin2x"
                        android:src="@drawable/artists"/>

                    <com.dust.exmusic.customviews.CTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nothingFound"
                        android:textSize="@dimen/standardMargin1.5x"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/standardMargin"
                        android:textColor="@color/purpleMain"/>
                </LinearLayout>

            </RelativeLayout>
            <ProgressBar
                android:id="@+id/searchPb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/standardMargin2x"
                android:indeterminateTint="@color/purpleMain"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
