            <corners android:topLeftRadius="@dimen/standardMargin" android:topRightRadius="@dimen/standardMargin" android:bottomLeftRadius="@dimen/standardMargin" android:bottomRightRadius="@dimen/standardMargin"/>
            <padding android:top="@dimen/standardMargin0.5x" android:bottom="@dimen/standardMargin0.5x" android:left="@dimen/standardMargin0.5x" android:right="@dimen/standardMargin0.5x"/>
